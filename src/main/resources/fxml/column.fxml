<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskboard.controller.ColumnController"
            style="-fx-background-color: #f4f6fb; -fx-padding: 24; -fx-background-radius: 16;">
    <center>
        <VBox alignment="CENTER" spacing="18" maxWidth="900" style="-fx-background-color: #ffffff; -fx-padding: 36 48 36 48; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, #e0e0e0, 10, 0.2, 0, 2);">
            <HBox alignment="TOP_RIGHT" spacing="10">
                <Button text=" Back to Projects" onAction="#onBackToProjects" style="-fx-background-color: #e3e7ed; -fx-text-fill: #1976d2; -fx-background-radius: 8; -fx-font-weight: bold;"/>
                <Button onAction="#onLogout" text="P" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 16; -fx-min-width: 32px; -fx-min-height: 32px; -fx-max-width: 32px; -fx-max-height: 32px;" />
            </HBox>
            <Label fx:id="lblProjectName" text="Project: " style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label text="Create Columns for Project" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1976d2;"/>
            <HBox spacing="16" alignment="CENTER_LEFT">
                <TextField fx:id="tfColumnName" promptText="Column name" maxWidth="180"/>
                <Spinner fx:id="spOrder" promptText="Order" min="1" max="100" initialValue="1" maxWidth="100"/>
                <Button text="Add Column" onAction="#onAddColumn" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 15px;" maxWidth="140"/>
                <Button text="Continue" onAction="#onContinue" style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 15px;" maxWidth="140"/>
            </HBox>
            <Label fx:id="lblColumnError" textFill="red"/>
            <HBox spacing="24" alignment="CENTER">
                <TableView fx:id="tvColumns" prefHeight="140" prefWidth="320" maxWidth="320" style="-fx-background-radius: 8;">
                    <columns>
                        <TableColumn fx:id="colColumnName" text="Column Name" prefWidth="180" />
                        <TableColumn fx:id="colColumnActions" text="Actions" prefWidth="120" />
                    </columns>
                </TableView>
                <TableView fx:id="tvColumnTasks" prefHeight="140" prefWidth="340" maxWidth="340" style="-fx-background-radius: 8;">
                    <columns>
                        <TableColumn fx:id="colTaskTitle" text="Title" prefWidth="180" />
                        <TableColumn fx:id="colTaskLabels" text="Labels" prefWidth="120" />
                    </columns>
                </TableView>
            </HBox>
        </VBox>
    </center>
</BorderPane>
