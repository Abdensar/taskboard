<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskboard.controller.ColumnController">
    <children>
        <VBox alignment="CENTER" spacing="16" layoutX="100" layoutY="60">
            <HBox alignment="TOP_RIGHT" spacing="10">
                <Button text="â¬… Back to Projects" onAction="#onBackToProjects" style="-fx-background-color: #e3e7ed; -fx-text-fill: #1976d2; -fx-background-radius: 8; -fx-font-weight: bold;"/>
                <Button onAction="#onLogout" text="P" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 16; -fx-min-width: 32px; -fx-min-height: 32px; -fx-max-width: 32px; -fx-max-height: 32px;" />
            </HBox>
            <Label fx:id="lblProjectName" text="Project: " style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label text="Create Columns for Project" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <TextField fx:id="tfColumnName" promptText="Column name"/>
            <Spinner fx:id="spOrder" promptText="Order" min="1" max="100" initialValue="1"/>
            <Button text="Add Column" onAction="#onAddColumn" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <TableView fx:id="tvColumns" prefHeight="120">
                <columns>
                    <TableColumn fx:id="colColumnName" text="Column Name" prefWidth="140" />
                    <TableColumn fx:id="colColumnActions" text="Actions" prefWidth="120" />
                </columns>
            </TableView>
            <Button text="Continue" onAction="#onContinue" style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="lblColumnError" textFill="red"/>
            <TableView fx:id="tvColumnTasks" prefHeight="180">
                <columns>
                    <TableColumn fx:id="colTaskTitle" text="Title" prefWidth="180" />
                    <TableColumn fx:id="colTaskLabels" text="Labels" prefWidth="120" />
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
