<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskboard.controller.ProjectController"
            style="-fx-background-color: #f4f6fb; -fx-padding: 24; -fx-background-radius: 16;">
    <center>
        <VBox alignment="CENTER" spacing="18" maxWidth="900" style="-fx-background-color: #ffffff; -fx-padding: 36 48 36 48; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, #e0e0e0, 10, 0.2, 0, 2);">
            <HBox alignment="TOP_RIGHT">
    <MenuButton text="Account" fx:id="userMenuBtn" popupSide="LEFT" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 16; -fx-cursor: hand;">
        <items>
            <MenuItem fx:id="userNameMenuItem" text="Username: [username]" disable="true" style="-fx-cursor: hand;" />
            <MenuItem fx:id="userEmailMenuItem" text="Email: [email]" disable="true" style="-fx-cursor: hand;" />
            <SeparatorMenuItem />
            <MenuItem text="Logout" onAction="#onLogout" style="-fx-text-fill: red; -fx-cursor: hand;" />
        </items>
    </MenuButton>
</HBox>
            <Label text="Choose or Create a Project" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1976d2;"/>
            <HBox spacing="16" alignment="CENTER_LEFT">
                <TextField fx:id="tfProjectName" promptText="New project name" maxWidth="260"/>
                <Button text="Create Project" onAction="#onCreateProject" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 15px; -fx-cursor: hand;" maxWidth="180"/>
                <Button text="Continue" onAction="#onContinue" style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 15px; -fx-cursor: hand;" maxWidth="180"/>
            </HBox>

            <Label fx:id="lblProjectError" textFill="red"/>
            <HBox spacing="24" alignment="CENTER">
                <TableView fx:id="tvProjects" prefHeight="180" prefWidth="380" maxWidth="380" style="-fx-background-radius: 8;">
    <columns>
        <TableColumn fx:id="colProjectName" text="Project Name" prefWidth="170" minWidth="150" maxWidth="200" />
        <TableColumn fx:id="colOwnership" text="Ownership" prefWidth="80" minWidth="70" maxWidth="100" />
        <TableColumn fx:id="colProjectActions" text="Actions" prefWidth="130" minWidth="110" maxWidth="150" />
    </columns>
</TableView>
                <TableView fx:id="tvProjectTasks" prefHeight="180" prefWidth="380" maxWidth="380" style="-fx-background-radius: 8;">
                    <columns>
                        <TableColumn fx:id="colTaskTitle" text="Title" prefWidth="220" />
                        <TableColumn fx:id="colTaskStatus" text="Status" prefWidth="120" />
                    </columns>
                </TableView>
            </HBox>
            <Separator style="-fx-padding: 20 0 0 0;"/>
            <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 16 0 0 0;">
                <Label text="Share this project" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #1976d2;"/>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <TextField fx:id="tfShareEmail" promptText="Enter user email to share..." maxWidth="220" />
                    <Button fx:id="btnShare" text="Share Project" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" />
                </HBox>
                <Label fx:id="lblShareError" textFill="red" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
