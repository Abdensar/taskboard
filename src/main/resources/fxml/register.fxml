<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskboard.controller.RegisterController">
    <children>
        <VBox alignment="CENTER" spacing="16" layoutX="100" layoutY="60">
            <Label text="Register" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
            <TextField fx:id="tfEmail" promptText="Email"/>
            <TextField fx:id="tfName" promptText="Name"/>
            <PasswordField fx:id="tfPassword" promptText="Password"/>
            <PasswordField fx:id="tfConfirm" promptText="Confirm Password"/>
            <Button text="Register" onAction="#onRegister" style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Hyperlink text="Back to Login" onAction="#onGoToLogin"/>
            <Label fx:id="lblError" textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
