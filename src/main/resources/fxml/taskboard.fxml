<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskboard.controller.TaskBoardController"
            style="-fx-background-color: #f4f6fb; -fx-padding: 24; -fx-background-radius: 16;">
    <top>
        <VBox>
            <ToolBar style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-padding: 8 16 8 16; -fx-effect: dropshadow(gaussian, #e0e0e0, 6, 0.2, 0, 2);">
                <Button text="＋ Add Task" onAction="#onAddTask" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;"/>
                <Button text="⟳ Refresh" onAction="#onRefresh" style="-fx-background-color: #e3e7ed; -fx-text-fill: #1976d2; -fx-background-radius: 8; -fx-font-weight: bold;"/>
                <Button text="⭳ Export" onAction="#onExport" fx:id="exportBtn" style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;"/>
                <Button text="⬅ Back to Columns" onAction="#onBackToColumns" style="-fx-background-color: #e3e7ed; -fx-text-fill: #1976d2; -fx-background-radius: 8; -fx-font-weight: bold;"/>
            </ToolBar>
           
        </VBox>
    </top>
    <center>
        <HBox spacing="16" alignment="TOP_RIGHT" style="-fx-padding: 0 0 10 0;">
            <Label text="Project:" />
            <ComboBox fx:id="projectSelector" prefWidth="160" />
        </HBox>
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="16">
                <Label text="Filter by:" />
                <ComboBox fx:id="filterColumnCombo" prefWidth="140" />
                <ComboBox fx:id="filterValueCombo" prefWidth="140" />
                <DatePicker fx:id="dueDateFilterPicker" visible="false" />
                <!-- <Label text="Column:" />  -->
                <ComboBox fx:id="columnSelector" prefWidth="140" />
            </HBox>
            <TableView fx:id="taskTable" prefHeight="400" maxWidth="1.7976931348623157E308" style="-fx-background-color: #ffffff; -fx-background-radius: 12;">
                <columns>
                <TableColumn text="Title" prefWidth="150" fx:id="colTitle" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;"/>
                <TableColumn text="Description" prefWidth="200" fx:id="colDesc" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;"/>
                <TableColumn text="Status" prefWidth="100" fx:id="colStatus" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;"/>
                <TableColumn text="Priority" prefWidth="80" fx:id="colPriority" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;"/>
                <TableColumn text="Due Date" prefWidth="100" fx:id="colDue" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;"/>
                <TableColumn text="Labels" prefWidth="130" fx:id="colLabels" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;"/>
                <TableColumn text="Actions" prefWidth="120" fx:id="colActions" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;"/>
            </columns>
        </TableView>
    </VBox>
    </center>
</BorderPane>