<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskboard.controller.TaskBoardController"
            style="-fx-background-color: #f4f6fb; -fx-padding: 24; -fx-background-radius: 16;">
    <top>
        <VBox>
            <ToolBar style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-padding: 8 16 8 16; -fx-effect: dropshadow(gaussian, #e0e0e0, 6, 0.2, 0, 2);">
    <HBox alignment="CENTER" spacing="24" style="-fx-pref-width: 100%; -fx-alignment: center; -fx-spacing: 24;">
        <Button text="＋ Add Task" onAction="#onAddTask" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand;" minWidth="110" maxWidth="180" />
        <Button text="⟳ Refresh" onAction="#onRefresh" style="-fx-background-color: #e3e7ed; -fx-text-fill: #1976d2; -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand;" minWidth="90" maxWidth="150" />
        <Button text="⭳ Export" onAction="#onExport" fx:id="exportBtn" style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand;" minWidth="90" maxWidth="150" />
        <Button text="⬅ Back to Columns" onAction="#onBackToColumns" style="-fx-background-color: #e3e7ed; -fx-text-fill: #1976d2; -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand;" minWidth="150" maxWidth="220" />
    </HBox>
    <Pane HBox.hgrow="ALWAYS" />
    <MenuButton text="Account" fx:id="userMenuBtn" popupSide="LEFT" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 16; -fx-cursor: hand;">
        <items>
            <MenuItem fx:id="userNameMenuItem" text="Username: [username]" disable="true" />
            <MenuItem fx:id="userEmailMenuItem" text="Email: [email]" disable="true" />
            <SeparatorMenuItem />
            <MenuItem text="Logout" onAction="#onLogout" style="-fx-text-fill: red;" />
        </items>
    </MenuButton>
</ToolBar>
           
        </VBox>
    </top>
    <center>
        <HBox spacing="16" alignment="TOP_RIGHT" style="-fx-padding: 0 0 10 0;">
            <Label text="Project:" />
            <ComboBox fx:id="projectSelector" prefWidth="160" style="-fx-cursor: hand;" />
        </HBox>
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="16">
                <Label text="Filter by:" />
                <ComboBox fx:id="filterColumnCombo" prefWidth="140" style="-fx-cursor: hand;" />
                <ComboBox fx:id="filterValueCombo" prefWidth="140" style="-fx-cursor: hand;" />
                <DatePicker fx:id="dueDateFilterPicker" visible="false" />
                <!-- <Label text="Column:" />  -->
                <ComboBox fx:id="columnSelector" prefWidth="140" style="-fx-cursor: hand;" />
            </HBox>
            <TableView fx:id="taskTable" prefHeight="400" maxWidth="1.7976931348623157E308" style="-fx-background-color: #ffffff; -fx-background-radius: 12;">
    <columns>
        <TableColumn text="Title" fx:id="colTitle" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;" prefWidth="150" />
        <TableColumn text="Description" fx:id="colDesc" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;" prefWidth="200" />
        <TableColumn text="Status" fx:id="colStatus" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;" prefWidth="100" />
        <TableColumn text="Priority" fx:id="colPriority" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;" prefWidth="80" />
        <TableColumn text="Due Date" fx:id="colDue" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;" prefWidth="100" />
        <TableColumn text="Labels" fx:id="colLabels" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;" prefWidth="130" />
        <TableColumn text="Actions" fx:id="colActions" style="-fx-background-color: #f4f6fb; -fx-font-weight: bold;" prefWidth="120" />
    </columns>
</TableView>
    </VBox>
    </center>
</BorderPane>