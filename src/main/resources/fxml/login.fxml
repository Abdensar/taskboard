<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskboard.controller.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="16" layoutX="100" layoutY="60">
            <Label text="TaskBoard Login" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
            <TextField fx:id="tfEmail" promptText="Email"/>
            <PasswordField fx:id="tfPassword" promptText="Password"/>
            <Button text="Login" onAction="#onLogin" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Hyperlink text="Register" onAction="#onGoToRegister"/>
            <Label fx:id="lblError" textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
